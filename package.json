{
  "name": "vscode-firebase",
  "displayName": "Firebase",
  "publisher": "me-dutour-mathieu",
  "description": "Firestore Security Rules syntaxt highlighting and linting",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/mathieudutour/vscode-firebase.git"
  },
  "bugs": {
    "url": "https://github.com/mathieudutour/vscode-firebase/issues"
  },
  "homepage": "https://github.com/mathieudutour/vscode-firebase",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "firebase",
    "firestore"
  ],
  "icon": "./docs/logo.png",
  "galleryBanner": {},
  "badges": [],
  "activationEvents": [
    "onLanguage:firerules"
  ],
  "license": "MIT",
  "author": {
    "name": "Mathieu Dutour"
  },
  "main": "./out/extension.js",
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "languages": [
      {
        "id": "firerules",
        "extensions": [
          ".rules",
          ".rule"
        ],
        "aliases": [
          "Firebase Rules"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "firerules",
        "scopeName": "source.firerules",
        "path": "./syntaxes/firerules.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.indexes.json",
        "url": "./syntaxes/index.schema.json"
      },
      {
        "fileMatch": "firebase.json",
        "url": "./syntaxes/firebase.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/configstore": "^4.0.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/request": "^2.48.5",
    "@types/vscode": "^1.50.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "typescript": "^4.0.2",
    "vsce": "^1.81.1",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "configstore": "^5.0.1",
    "request": "^2.88.2"
  }
}
